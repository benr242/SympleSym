{% extends 'base.html.twig' %}

{% block title %}List{% endblock %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
            <th>Last Updated</th>
        </tr>
        </thead>


        <tbody>
        {% for key, genus in genuses %}
            <tr>
                <td>key: {{ key }}</td>
                <td>{{ genus.name }}</td>
                <td>{{ genus.speciesCount }}</td>
                <td>{{ genus.updatedAt|date('Y-m-d') }}</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
{% endblock %}

